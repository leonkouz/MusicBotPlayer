<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MusicBotPlayer">

    <Color x:Key="BackgroundDark">#151412</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>

    <Color x:Key="BackgroundGray">#2a2824</Color>
    <SolidColorBrush x:Key="BackgroundGrayBrush" Color="{StaticResource BackgroundGray}"/>

    <Color x:Key="ForegroundGray">#b8babc</Color>
    <SolidColorBrush x:Key="ForegroundGrayBrush" Color="{StaticResource ForegroundGray}"/>

    <LinearGradientBrush x:Key="BackgroundPurpleGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#91a5f4" Offset="0.46"/>
        <GradientStop Color="#b08cf9" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundFlatGrayGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2a2824" Offset="0.5"/>
        <GradientStop Color="#2a2824" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>