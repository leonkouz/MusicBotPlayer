<Window x:Class="MusicBotPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicBotPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="535.805" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <!-- Side Menu Bar -->
            <ColumnDefinition Width="250"/>
            <!-- Main Content Area -->
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Menu Bar -->
        <Grid Background="{StaticResource BackgroundDarkBrush}"
              Grid.Column="0"
              HorizontalAlignment="Stretch">

            <TextBlock HorizontalAlignment="Left" 
                       Margin="22,27,0,0" 
                       Text="Music Bot Player" 
                       FontFamily="Microsoft Sans Serif"
                       FontSize="26"
                       Foreground="White"
                       VerticalAlignment="Top" 
                       Height="31" 
                       Width="199"/>

            <TextBlock HorizontalAlignment="Left" 
                       Margin="22,88,0,0" 
                       TextWrapping="Wrap" 
                       Text="Integrations" 
                       FontFamily="Microsoft Sans Serif"
                       Foreground="White"
                       VerticalAlignment="Top" 
                       Height="18" 
                       Width="68"/>

            <Button Content="Youtube" 
                    Style="{StaticResource MenuButton}"
                    HorizontalAlignment="Left" 
                    Margin="34,123,0,0" 
                    VerticalAlignment="Top" 
                    Width="170" 
                    Height="34"/>

            <Button Content="Spotify" 
                    HorizontalAlignment="Left"
                    Margin="34,171,0,0" 
                    VerticalAlignment="Top" 
                    Width="170" 
                    Height="34"/>




        </Grid>

        <!-- Main Content Area -->
        <Border Grid.Column="1"
                Background="{StaticResource BackgroundDarkBrush}"
                BorderBrush="DimGray"
                BorderThickness="1 0 0 0">

            <Grid >

            </Grid>

        </Border>

        <!-- Music Controller -->
        <Border Grid.ColumnSpan="2"
                BorderBrush="DimGray"
                BorderThickness="0 2 0 0"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Stretch"
                >

            <Grid Background="{StaticResource BackgroundGrayBrush}"
                  Height="90"
                  HorizontalAlignment="Stretch"
                  >

                <Button Margin="381,40,371,10"
                        Content="Back"
                        Width="40"
                        Height="40"
                        />

                <Button Margin="454,40,298,10"
                        Width="40"
                        Height="40"
                        Content="Play/Pause" RenderTransformOrigin="0.25,0.269"/>

                <Button Margin="526,40,226,10"
                        Width="40"
                        Height="40"
                        Content="Forward"/>

                <Slider Margin="115,10,0,0" 
                        VerticalAlignment="Top" 
                        Width="647"/>

                <Image HorizontalAlignment="Left" 
                       Source="Images/AlbumPlaceholder.PNG"
                       Height="70" 
                       Margin="10,10,0,0" 
                       VerticalAlignment="Top" 
                       Width="89"/>

                <TextBlock HorizontalAlignment="Left" 
                           Margin="115,35,0,0" 
                           TextWrapping="Wrap" 
                           VerticalAlignment="Top"
                           Foreground="White"
                           >

                    <TextBlock.Inlines>
                        <Run FontWeight="Bold" FontSize="16" Text="Artist Name"/>
                    </TextBlock.Inlines>

                </TextBlock>
                
                <TextBlock HorizontalAlignment="Left" 
                           Margin="115,61,0,0" 
                           Text="Song Name which runs off eventually with elip"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="NoWrap"
                           VerticalAlignment="Top"
                           Foreground="White" Width="209"
                           />


            </Grid>
        </Border>

    </Grid>
</Window>
